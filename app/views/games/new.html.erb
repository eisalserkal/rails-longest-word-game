<h1>New Game</h1>
<div id="letters">
  <% @letters.each do |letter| %>
  <p><%= letter %></p>
  <% end %>
</div>
<form method="POST" action="/score">
  <input type="text" name="word">
  <input type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
</form>
